extends ../layouts/default

block intro
	.container
		h1 Media

block content
	.container
		if galleries.length
			each gallery in galleries
				h2= gallery.name
					if gallery.publishedDate
						.pull-right.text-muted= gallery._.publishedDate.format('MMMM Do YYYY')

				.row.gallery-images
					if gallery.heroImage.exists
						.col-sm-4.col-md-4.gallery-image: img(src=gallery._.heroImage.limit(640,640))
						.col-sm-8.col-md-8: .row
							each image in gallery.images
								.col-xs-4.col-sm-4.col-md-3.gallery-image
									a(href=image.limit(1920,1080)): img(src=image.limit(256,256))
					else
						each image in gallery.images
							.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(256,256))
		else
			h3.text-muted There are no image galleries yet.
